#!/bin/bash
#

set AUDIODEV=hw:1

DECODER=wsprcan/k9an-wsprd
TMPOUT='_wsprd.out'

decode () {

	date >> /wsproutput.log
	./wsprcan/k9an-wsprd  >> /wsproutput.log
	# sleep 118
}

while true
do
	sec=$(date +'%S')
	min=$(date +'%M')

	if (("10#$min" % 2 == 0 && "10#$sec" == 0 )); then
		echo -n "Executing wspr_decode "
		decode
	elif ((10#$sec < 40)); then
		sleep 1
	fi
done
